<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PractiFly.MauiApplication.MainPage">

    <StackLayout >
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="MainPage" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout WidthRequest="200" HorizontalOptions="Center" Spacing="20">
            <Button Text="Login" Clicked="Login"/>
            <Button Text="Registration" Clicked="Registration"/>
            <Button Text="Admin" Clicked="Admin"/>
            <Button Text="Category" Clicked="Category"/>
            <Button Text="Course" Clicked="Course"/>
            <Button Text="CourseMaterial" Clicked="CourseMaterial"/>
            <Button Text="CourseTheme" Clicked="CourseTheme"/>
            <Button Text="MaterialBlocks" Clicked="MaterialBlocks"/>
            <Button Text="RubricsCourse" Clicked="RubricsCourse"/>
        </StackLayout>
    </StackLayout>



</ContentPage>
